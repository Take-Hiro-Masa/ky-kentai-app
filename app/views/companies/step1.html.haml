.signup
  = render "signup/header"

  .signup__main
    .signup__main__header
      %p 所属会社情報入力
    .signup__main__form
      = form_with model: @company, local: true, url: companies_path, class: "signup__main__form__content", method: 'POST' do |f|

        .signup__main__form__title
          %label 会社名
          %span.signup__main__form__require 必須
          = f.text_field :company_name, class: "signup__main__form__input", placeholder: "例）竹橋建設", autofocus: "true"
          
        .signup__main__form__title
          %label 郵便番号
          %span.signup__main__form__require 必須
          = f.text_field :postal_code, class: "signup__main__form__input", placeholder: "例）123-4567", autocomplete: "postal-code"

        .signup__main__form__title
          %label 都道府県
          %span.signup__main__form__require 必須
          = f.select :prefecture,[["北海道"], ["青森県"], ["岩手県"], ["宮城県"], ["秋田県"], ["山形県"], ["福島県"], ["茨城県"], ["栃木県"], ["群馬県"], ["埼玉県"], ["千葉県"],["東京都"], ["神奈川県"], ["新潟県"], ["富山県"], ["石川県"], ["福井県"], ["山梨県"], ["長野県"], ["岐阜県"], ["静岡県"], ["愛知県"], ["三重県"], ["滋賀県"], ["京都府"], ["大阪府"], ["兵庫県"], ["奈良県"], ["和歌山県"], ["鳥取県"], ["島根県"], ["岡山県"], ["広島県"], ["山口県"], ["徳島県"], ["香川県"], ["愛媛県"], ["高知県"], ["福岡県"], ["佐賀県"], ["長崎県"], ["熊本県"], ["大分県"], ["宮崎県"], ["鹿児島県"], ["沖縄県"]], {include_blank: '未選択'}, {class: "signup__main__form__prefecture"}

        .signup__main__form__title
          %label 市区町村
          %span.signup__main__form__require 必須
          = f.text_field :city, class: "signup__main__form__input", placeholder: "例）名古屋市中区"

        .signup__main__form__title
          %label 番地
          %span.signup__main__form__require 必須
          = f.text_field :block, class: "signup__main__form__input", placeholder: "例）青山1-1-1"
          
        .signup__main__form__title
          %label 建物
          %span.signup__main__form__any 任意
          = f.text_field :building, class: "signup__main__form__input", placeholder: "例）柳ビル103"
    
        .signup__main__form__title
          %label 電話番号
          %span.signup__main__form__require 必須 
          = f.text_field :phone_num, autocomplete: "tel", placeholder:'052-111-1111', class: "signup__main__form__input"

        .signup__main__form__title
          %label 代表者
          %span.signup__main__form__require 必須 
          = f.text_field :Representative, placeholder:'尾崎 豊', class: "signup__main__form__input"
        
        = f.submit "次へ進む", class: "signup__main__form__btn"

  = render "home/footer"