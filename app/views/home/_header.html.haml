.header
  .header__main
    .header__main__top
      .header__main__top__logo
        %i.fas.fa-plus-square
      .header__main__top__text  安全掲示板

    .header__main__bottom
      .header__main__bottom__left
        .header__main__bottom__left__logo
          %p KY
        .header__main__bottom__left__text
          %p 危険を予知して安全作業

      - if user_signed_in?
        %ul.header__main__bottom__right
          %li.header__main__bottom__right__chat
            = link_to '#', class:"header__main__bottom__right__btn" do
              チャット
          %li.header__main__bottom__right__logout
            = link_to '#', class:"header__main__bottom__right__btn" do
              ログアウト
          %li.header__main__bottom__right__mypage
            = link_to '#', class:"header__main__bottom__right__btn" do
              マイページ

      - else 
        %ul.header__main__bottom__right
          %li.header__main__bottom__right__chat
            = link_to '#', class:"header__main__bottom__right__btn" do
              チャット
          %li.header__main__bottom__right__login
            = link_to '#', class:"header__main__bottom__right__btn" do
              ログイン
          %li.header__main__bottom__right__signup
            = link_to '#', class:"header__main__bottom__right__btn" do
              新規登録
